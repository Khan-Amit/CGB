    <!-- Main Script -->
    <script src="script.js"></script>
    
    <!-- Force GitHub Pages to recognize this as main content -->
    <script>
        // Prevent GitHub Pages from defaulting to README
        if (window.location.pathname === '/' || window.location.pathname === '/CGB/') {
            document.title = "Bright Future Gift Box - Main Page";
        }
        
        // Clear any cached version
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.getRegistrations().then(function(registrations) {
                for(let registration of registrations) {
                    registration.unregister();
                }
            });
        }
        
        // Add cache-busting parameter
        const links = document.querySelectorAll('link[rel="stylesheet"], script[src]');
        links.forEach(link => {
            const url = new URL(link.href || link.src, window.location);
            url.searchParams.set('v', Date.now());
            if (link.href) link.href = url.href;
            if (link.src) link.src = url.src;
        });
    </script>
